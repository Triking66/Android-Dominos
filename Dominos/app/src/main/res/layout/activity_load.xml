<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.dominos.LoadActivity">

    <Button
        android:id="@+id/NewGame"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Create a new game"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/DeleteGame"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/DeleteGame"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Delete a game"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/NewGame"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/loadGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/NewGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>
